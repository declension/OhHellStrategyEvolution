<configuration>

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <!-- encoders are assigned the type
             ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %36.36logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="net.declension.ea" level="DEBUG"/>
    <logger name="net.declension.ea.cards.ohhell.nodes" level="INFO"/>
    <logger name="net.declension.ea.cards.ohhell.evolution.TreeMutation" level="INFO"/>
    <logger name="net.declension.ea.cards.ohhell.GeneticStrategy" level="INFO" />
    <logger name="net.declension.games.cards.ohhell.Tournament" level="INFO" />

    <root level="warn">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>